    "@types/multer": "^1.3.6",
    "@types/node": "^8.10.36",
    "@types/node-fetch": "^2.1.4",
    "@types/semver": "^5.5.0",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.2",
    "@types/tween.js": "^16.9.0",
    "@types/uglify-js": "^3.0.4",
    "blink-diff": "^1.0.13",
    "chai": "^4.1.2",
    "cors": "^2.8.4",
    "dcl-amd": "^1.0.5",
    "dcl-tslint-config-standard": "^1.0.1",
    "express": "^4.16.3",
    "fs-extra": "^5.0.0",
    "git-rev-sync": "^1.12.0",
