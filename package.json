{
  "name": "dcl-client",
  "version": "4.1.0",
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "git lfs install --force && npm i -S decentraland-rpc@latest",
    "start": "make watch",
    "build": "make build",
    "test": "make test-ci"
  },
  "private": true,
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "make lint && lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "prettier --write 'packages/**/*.{ts,tsx}'",
      "git add"
    ],
    "packages/decentraland-ecs/types/dcl/index.d.ts": [
      "prettier --write 'packages/decentraland-ecs/types/dcl/index.d.ts'",
      "git add"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/dist/**",
      "**/test/**"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^1.5.59",
    "@microsoft/api-extractor": "^6.3.0",
    "@tweenjs/tween.js": "^17.2.0",
