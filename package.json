    "sinon": "^6.1.3",
    "sinon-chai": "^3.3.0",
    "titere": "^2.0.3",
    "tslint": "^5.14.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.4.5",
    "uuid": "^3.1.0"
