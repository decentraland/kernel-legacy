{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "~/*": ["webb/src/*"],
      "@dcl/*": ["./*"],
      "dcl/*": ["./*"]
    },
    "allowJs": true,
    "declaration": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
  }
}