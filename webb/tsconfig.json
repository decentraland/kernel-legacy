{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["./*"],
      "@dcl/webb/*": ["./*"],
      "@dcl/utils/*": ["../../utils/package/*"],
      "@dcl/utils": ["../../utils/package"],
      "@dcl/kernel": ["../../client/package"],
      "@dcl/kernel/*": ["../../client/package/*"],
      "@dcl/config": ["../../config/package"],
      "@dcl/config/*": ["../../config/package/*"]
    },
    "downlevelIteration": true
  }
}
