{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "outDir": "scene-api",
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "allowUmdGlobalAccess": true,
    "baseUrl": "..",
    "paths": {
      "@dcl/utils": ["./utils"],
      "@dcl/utils/*": ["./utils/*"]
    }
  },
  "exclude": ["extract.ts"],
  "include": [
    "./utils/**/*.ts",
    "./scene-api/ecs/**/*.ts",
    "./scene-api/engine/**/*.ts",
    "./scene-api/lib/**/*.ts",
    "./scene-api/schema/**/*.ts",
    "./scene-api/index.ts"
  ]
}