{
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "packages/metaverse-api/*.js": {
      "when": "$(basename).ts"
    },
    "dist": true,
    ".prettierignore": true,
    ".vscode": true,
    ".github": true,
    ".circleci": true,
    "**/*.d.ts": false
  },
  "prettier.ignorePath": ".prettierignore",
  "editor.tabSize": 2
}
