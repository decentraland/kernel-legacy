{
  "bazelOpts": {
    "es5Mode": true,
    "devmodeTargetOverride": "es2015"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "dcl/rpc-common": ["bazel-genfiles/rpc/common"],
      "dcl/rpc-client": ["bazel-genfiles/rpc/client"],
      "dcl/rpc-host": ["bazel-genfiles/rpc/host"],
      "dcl/*": ["bazel-genfiles/*"]
    },
    "module": "esnext",
    "diagnostics": false,
    "moduleResolution": "node",
    "stripInternal": true,
    "inlineSourceMap": false,
    "downlevelIteration": true,
    "inlineSources": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "declaration": true,
    "preserveConstEnums": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "removeComments": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["esnext", "dom"]
  },
  "exclude": ["bazel-*", "node_modules", "**/node_modules/*"]
}
