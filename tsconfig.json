{
  "bazelOpts": {
    "es5Mode": true,
    "devmodeTargetOverride": "es2015"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@dcl/*": ["bazel-genfiles/*", "bazel-bin/*"],
      "@dcl/webb/*": ["webb/src/*", "bazel-genfiles/webb/*"]
    },
    "module": "esnext",
    "diagnostics": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "declaration": true,
    "preserveConstEnums": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "removeComments": false,
    "target": "es6",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["esnext", "dom"]
  },
  "exclude": ["bazel-*", "node_modules", "**/node_modules/*"]
}
