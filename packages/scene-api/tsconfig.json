{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "downlevelIteration": true,
    "keyofStringsOnly": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "./src", "../utils/math", "../utils/Task.ts", "../utils/Observable.ts"
  ],
  "exclude": [
    "../../node_modules",
    "../../src",
    "../../test",
    "../test",
    "dist",
    "etc",
    "temp",
    "types",
    "api-docs-review/decentraland-scene-api.api.ts"
  ]
}
